{
  "name": "@adrianbrs/jcc",
  "version": "1.0.0",
  "description": "Case study of a minimalist C compiler built in JavaScript",
  "main": "bin/jcc.js",
  "type": "module",
  "scripts": {
    "build": "tsc && tsc-alias",
    "build:watch": "tsc && (concurrently \"tsc -w\" \"tsc-alias -w\")",
    "start:dev": "NODE_ENV=development tsx src/index.ts",
    "clang:lex": "clang -fsyntax-only -Xclang -dump-tokens",
    "start": "node ./bin/jcc.js",
    "jcc": "./bin/jcc.js",
    "dict:gen": "tsx scripts/dictgen/index.ts",
    "dict:update": "pnpm dict:gen dict/clang.bnf -t dict/clang.tokens.bnf -o src/clang.json"
  },
  "bin": {
    "jcc": "./bin/jcc.js"
  },
  "keywords": [
    "compiler",
    "gcc",
    "c",
    "typescript",
    "case study"
  ],
  "engines": {
    "node": ">=14"
  },
  "author": "Adrian Cerbaro <adrian@cerbaro.dev>",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.8.4",
    "concurrently": "^8.2.1",
    "tsc-alias": "^1.8.8",
    "tsx": "^3.13.0",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^11.0.0",
    "supports-color": "^9.4.0"
  }
}
